# ===========================================
# UNCONS Demo - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your API keys

# Voice Pipeline (Required)
DEEPGRAM_API_KEY=your-deepgram-key
CARTESIA_API_KEY=your-cartesia-key

# AI Evaluation (Required)
GOOGLE_AI_API_KEY=your-gemini-key
GEMINI_MODEL=gemini-2.0-flash-exp

# LiveKit (Required)
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your-livekit-key
LIVEKIT_API_SECRET=your-livekit-secret

# Flashcard Source
# "local" = uses test_deck.json (no Anki needed)
# "anki" = requires AnkiConnect running
FLASHCARD_ADAPTER=local
ANKI_CONNECT_URL=http://localhost:8765

# App Configuration
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000

# Frontend (copy to frontend/.env.local)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_LIVEKIT_URL=wss://your-project.livekit.cloud
